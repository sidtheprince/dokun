box = Widget:new()
print("Box created: ", box)
label = Label:new()
print("Label created: ", label)
label1 = Label:new()
print("Label created: ", label1)
label2 = Label:new()
print("Label created: ", label2)

box:set_label(label)
print("Box (default) label is ", box.label)--box:get_label())
-- set multiple labels
box:set_label_list(label1)
box:set_label_list(label2)
-- test 'get_label_list' function
print("Label in index 1 is ", box.label1)--box:get_label_list(0))
print("Label in index 2 is ", box.label2)--box:get_label_list(1))
print("Label in index 3 is ", box.label3)--box:get_label_list(2))

os.exit()
